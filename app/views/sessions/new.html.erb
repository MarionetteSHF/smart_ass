<!DOCTYPE html>
<html>
<body>
<main class="container">

<div class="pt-5 text-center">
  <h2>Login</h2>
</div>

<section>
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
           <%= form_for :session, :class => 'form', url: :sessions_create do %>

            <%= label :session, :email, 'Email Address', :class => 'col-form-label' %>
            <%= text_field :session, :email, :class => 'form-control' %>
          
            <%= label :session, :password, 'Password', :class => 'col-form-label' %>
            <%= password_field :session, :password, :class => 'form-control' %>
            <br>
            
            <%= submit_tag 'Login', :class => 'btn btn-primary btn-lg btn-block' %>
            
          <% end %>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
          </div>

          <%= button_to "Log in with Google", '/auth/google_oauth2', :class=>"btn btn-primary btn-lg btn-block", :style=>"background-color: #dd4b39;"  %>

      </div>
    </div>
  </div>
</section>
</main>
</body>
</html>

