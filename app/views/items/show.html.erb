<h2>Details about <em><%= @item.title %></em></h2>

<% if @item.neededItem %>
    <p> Please contact if you want to Sell </p>
<% else %>
    <p> Please contact if you want to Buy </p>
<% end %>

<ul id="details">
  <li>
    Item:
    <%= @item.title %>
  </li>
  <li>
    price:
    <%= @item.price %>
  </li>

</ul>

<h3>Description:</h3>
<p id="description">
  <%= @item.description %>
</p>

<div class="row">
  <%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-primary col-2' %>
  <%= link_to "delete", item_path(@item), data:{
                          turbo_method: :delete,
                          turbo_confirm: "Are you sure?"
        } %>  
  <%= link_to 'Back to item list', items_path, class: 'btn btn-primary col-2' %>
</div>
