<h2>Register</h2>

<%= form_tag users_path, :class => 'form' do %>
  <%= label :user, :name, 'Name', :class => 'col-form-label' %>
  <%= text_field :user, :name, :class => 'form-control' %>

  <%= label :user, :email, 'Email address', :class => 'col-form-label' %>
  <%= text_field :user, :email, :class => 'form-control' %>

  <%= label :user, :phone, 'Phone Number', :class => 'col-form-label' %>
  <%= text_field :user, :phone, :class => 'form-control' %>

  <%= label :user, :password, 'Password', :class => 'col-form-label' %>
  <%= text_field :user, :password, :class => 'form-control' %>

  
  <%= submit_tag 'Register', :class => 'btn btn-primary' %>
  
<% end %>


